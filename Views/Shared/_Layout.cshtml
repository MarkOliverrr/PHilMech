<!DOCTYPE html>
<html lang="en">

    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
        <title>@ViewData["Title"]</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">

        <link rel="stylesheet" href="~/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/template.min.css">
        <link rel="stylesheet" href="~/css/template-icons.min.css">
        <link rel="stylesheet" href="~/css/template-settings.min.css">
        <link rel="stylesheet" href="~/lib/themify-icons/themify-icons.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    </head>
    <body class="jumping">

        <div id="root" class="root mn--max">

            <section id="content" class="content">
                @RenderBody()
                <partial name="_Footer" />
            </section>
            <partial name="_Header" />
            <partial name="_Navigation" />
            <partial name="_Sidebar" />

        </div>

        <div class="scroll-container">
            <a href="#root" class="scroll-page rounded-circle ratio ratio-1x1" aria-label="Scroll button"></a>
        </div>

        <partial name="_Offcanvas" />
    </body>
    
    
    <script src="~/lib/jquery/jquery.min.js" defer></script>
    <script src="~/js/vendors/popperjs/popper.min.js" defer></script>
    <script src="~/js/vendors/bootstrap/bootstrap.min.js" defer></script>
    <script src="~/lib/mustache.js/mustache.min.js"></script>
    <script src="~/js/nifty.min.js" defer></script>
    <script src="~/js/site.js" defer></script>

    @await RenderSectionAsync("Scripts", required: false)

</html>
